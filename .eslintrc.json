{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["plugin:sonarjs/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "curly": ["error", "all"],
        "brace-style": ["error", "1tbs", { "allowSingleLine": false }]
    },
    "plugins": ["sonarjs"]
}
